<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" id="sixapart-standard">
<head>
    <title>Create an Account - <$mt:BlogName encode_html="1"$></title>
    <link rel="stylesheet" href="<$mt:StaticWebPath$>plugins/MidCenturyMajordojo/system.css" type="text/css" />
    <$mt:include module="HTML Head"$>
</head>
<body id="<$mt:BlogTemplateSetID$>" class="mt-register-form <$MTVar name="page_layout"$> system-template">
    <div id="container">
        <div id="container-inner">
            <$mt:include module="Banner Header"$>
            <div id="content">
                <div id="content-inner">
                    <div id="alpha">
                        <div id="alpha-inner">

                                <div class="asset-header">
                                    <h1 id="page-title" class="asset-name">Create an Account</h1>
                                </div>

<mt:If name="saved">
    <$mt:Include module="Messaging" msg_id="message" msg_class="alert" msg_content="$message"$>
<mt:ElseIf name="error">
    <$mt:Include module="Messaging" msg_id="generic-error" msg_class="error" msg_content="$error"$>
</mt:If>

<mt:SetVarBlock name="common_fields" id="common_fields">

    <mt:SetVarBlock name="field_html"><input name="nickname" id="nickname" class="ti" value="<$mt:Var name="nickname" escape="html"$>" /></mt:SetVarBlock>
    <$mt:Include module="Form Field" field_id="nickname" field_class="" required="1" label="Display Name" description="The name appears on your comment."$>

    <mt:SetVarBlock name="field_html"><input name="email" id="email" class="ti" value="<$mt:Var name="email" escape="html"$>" /></mt:SetVarBlock>
    <$mt:Include module="Form Field" field_id="email" field_class="" required="1" label="Email Address" description="Your email address."$>

</mt:SetVarBlock>


                            <form method="post" action="<$mt:Var name="script_url"$>" id="new-user">
                                <input type="hidden" name="blog_id" value="<$mt:Var name="blog_id" escape="html"$>" />
                                <input type="hidden" name="return_to" value="<$mt:Var name="return_to" escape="html"$>" />

<mt:If name="auth_mode_mt">

                                <input type="hidden" name="__mode" value="do_register" />

                                <mt:SetVarBlock name="field_html"><input name="username" id="username" class="ti" value="<$mt:Var name="username" escape="html"$>" /></mt:SetVarBlock>
                                <$mt:Include module="Form Field" field_id="username" field_class="" required="1" label="Username" description="Your login name."$>

                                <$mt:Var name="common_fields"$>

                                <mt:SetVarBlock name="field_html"><input type="password" name="password" id="password" class="pw" value="" /></mt:SetVarBlock>
                                <$mt:Include module="Form Field" field_id="password" field_class="" required="1" label="Password" description="Enter a password for yourself."$>

                                <mt:SetVarBlock name="field_html"><input type="password" name="pass_verify" id="pass_verify" class="pw" value="" /></mt:SetVarBlock>
                                <$mt:Include module="Form Field" field_id="pass_verify" field_class="" required="1" label="Confirm Password" description="Repeat the password for confirmation."$>

                                <mt:SetVarBlock name="field_html"><input name="url" id="url" class="ti" value="<$mt:Var name="url" escape="html"$>" /></mt:SetVarBlock>
                                <$mt:Include module="Form Field" field_id="url" field_class="" required="0" label="Website URL" description="The URL of your website."$>

    <mt:If name="captcha_fields">
                                <div class="register-captcha">
                                    <$mt:Var name="captcha_fields"$>
                                </div>
    </mt:If>

<mt:Else>

                                <input type="hidden" name="__mode" value="do_register" />
                                <input type="hidden" name="external_auth" value="1" />

                                <mt:SetVarBlock name="field_html"><input name="username" id="username" class="ti" value="<$mt:Var name="username" escape="html"$>" /></mt:SetVarBlock>
                                <$mt:Include module="Form Field" field_id="external_username" field_class="" required="1" label="Username" description="Your login name."$>

</mt:If>

<mt:ignore>
<mt:Loop name="field_loop">
    <mt:If name="__first__">
                                <input type="hidden" name="_type" value="author" id="obj_type" />
                                <input type="hidden" name="customfield_beacon" value="1" id="customfield_beacon" />
    </mt:If>
    <mt:unless name="field_id" like="/^customfield_private_/">
                                <$mt:Include module="Form Field" field_id="$field_id" field_class="" required="$required" label="$name" description="$description"$>
    </mt:unless>
</mt:Loop>
</mt:ignore>

    
                                <div class="actions-bar">
                                    <div class="actions-bar-inner pkg actions">
                                        <button
                                            id="register-button"
                                            type="submit"
                                            class="primary-button"
                                            accesskey="s"
                                             >Register</button>
                                    </div>
                                </div>

                            </form>
                        </div><!-- end #alpha-inner -->
                    </div><!-- end #alpha -->
                    <div id="beta">
                      <div id="beta-inner">
                        <$mt:widgetset name="System Page"$>
                      </div><!-- end #beta-inner -->
                    </div><!-- end #beta -->
                </div>
            </div>
            <$mt:include module="Banner Footer" system="1"$>
        </div>
    </div>
</body>
</html>
